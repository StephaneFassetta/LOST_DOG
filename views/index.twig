{% extends 'layout.twig' %}

{% block navbar %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="group-button-game">
            <div class="row">
                <a role="button" class="btn btn-lg main-button" id="createRoom">CREE UNE PARTIE</a>

                <form action="" method="post" id="formCreateRoom">
                    <label for="name" class="main-menu-label">Name
                        <span>
                            <input type="text" class="form-control" aria-label="nameRoom" id="nameRoom" name="nameRoom" aria-describedby="basic-addon1">
                        </span>
                    </label>

                    <label for="pseudo" class="main-menu-label">Pseudo
                        <span>
                            <input type="text" class="form-control" aria-label="pseudoToCreate" name="pseudo" id="pseudoForCreate" class aria-describedby="basic-addon1">
                        </span>
                    </label>

                    <h5 class="card-title title-menu">CHOISISSEZ LES CARTES QUI SERONT DISPONIBLES</h5>
                    <div class="card-group">
                        {% for key, cards in cardsRole %}
                            <div class="row row-card">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="choice-role">
                                            <h5 class="card-title" style="display: inline">{{ cards.role }}</h5>
                                            <i title="Description" data-toggle="popover" data-placement="top" data-content="{{ cards.description }}" class="fa fa-question-circle" aria-hidden="true" data-html="true"></i>
                                        </div>
                                        <div class="card-counter" id="card-counter-{{ cards.id }}">
                                            <button type="button" class="btn-incremented-counter btn" data-children-input="card_{{ cards.id }}">+</button>
                                            <button type="button" class="btn-decremented-counter btn" data-children-input="card_{{ cards.id }}">-</button>
                                            <input style="width: 20%; text-align: center" class="counter_card" id="card_{{ cards.id }}" type="text" value="0"/>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div id="role-in-game">
                    </div>

                    <input type="hidden" id="newRoom" name="newRoom" aria-describedby="basic-addon1" value="1">
                </form>
            </div>

            <div class="row">
                <a role="button" class="btn btn-lg main-button" id="joinRoom">REJOINDRE UNE PARTIE</a>
                <form action="" method="post" id="formJoinRoom">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Nom de la partie Ã  rejoindre (ex : Partie entre amis)" aria-label="roomToJoin" id="roomToJoin" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Votre pseudo durant la partie" aria-label="pseudoToJoin" name="pseudo" id="pseudoForJoin" aria-describedby="basic-addon1">
                    </div>
                    <input type="hidden" id="joinRoom" name="joinRoom" aria-describedby="basic-addon1" value="1">
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
